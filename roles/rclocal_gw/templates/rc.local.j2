#!/bin/sh -e
#
# rc.local
#
# This script is executed at the end of each multiuser runlevel.
# Make sure that the script will "exit 0" on success or any other
# value on error.
#
# In order to enable or disable this script just change the execution
# bits.
#
# By default this script does nothing.

ip route add unreachable 10.0.0.0/8 || true
ip route add unreachable 172.16.0.0/12 || true
ip route add unreachable 192.168.0.0/16 || true
ip route add unreachable 240.0.0.0/4 || true


/sbin/ip route add unreachable default metric 1337 table 42 || true
/sbin/ip rule add from all fwmark 0x1 table 42 || true


exit 0
