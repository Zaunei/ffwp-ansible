#!/bin/sh -e
#
# rc.local
#
# This script is executed at the end of each multiuser runlevel.
# Make sure that the script will "exit 0" on success or any other
# value on error.
#
# In order to enable or disable this script just change the execution
# bits.
#
# By default this script does nothing.

ip -4 address add {{router_ip | ipaddr}} dev lo || true
ip -4 address add {{server_ipv4_nat | ipaddr}} dev lo || true
ip -6 address add {{router_v6_ip | ipaddr('address')}}/128 dev lo || true

#Packete die in Tabelle 42 landen und für die es keine Route gibt kommen nicht weiter (wichtig)
ip -4 route add unreachable default metric 1337 table 42 || true
ip -6 route add unreachable default metric 1337 table 42 || true

#Markierte Packete versuchen intern loszuwerden
ip -4 rule add from all fwmark 0x1 table 40 priority 40 || true
ip -6 rule add from all fwmark 0x1 table 40 priority 40 || true
#dann über ICVPN bzw. DN42
ip -4 rule add from all fwmark 0x1 table 41 priority 41 || true
ip -6 rule add from all fwmark 0x1 table 41 priority 41 || true
#Was übrig bleibt versuchen über Exit loszuwerden
ip -4 rule add from all fwmark 0x1 table 42 priority 42 || true
ip -6 rule add from all fwmark 0x1 table 42 priority 42 || true

#ToDo:Unötig?
#Um auch von dieser VM auf interne Ziele z.B pingen zu können
#ip -4 rule add from all table 43 priority 43|| true
#ip -6 rule add from all table 43 priority 43|| true

#Traffic aus ICVPN versuchen lokal loszuwerden
ip -4 rule add from all fwmark 0x2 table 40 priority 43 || true
ip -6 rule add from all fwmark 0x2 table 40 priority 43 || true
#wenn nicht, versuchen bei anderen Communities loswerden
ip -4 rule add from all fwmark 0x2 table 41 priority 44 || true
ip -6 rule add from all fwmark 0x2 table 41 priority 44 || true
#wenn immernoch kein Ziel gefunden unreachable
ip -4 rule add unreachable from all fwmark 0x2 priority 45 || true
ip -6 rule add unreachable from all fwmark 0x2 priority 45 || true

#Optional, aber doppelt hält besser:
ip -4 rule add unreachable from all fwmark 0x1 priority 46 || true
ip -6 rule add unreachable from all fwmark 0x1 priority 46 || true
#ggf. noch etwas was nicht auf fwmark basiert implementieren?

#interne FFWP Routen auch dem System zugänglich machen
ip -4 rule add from all table 40 priority 47 || true
ip -6 rule add from all table 40 priority 47 || true
#ICVPN Routen auch dem System zugänglich machen
ip -4 rule add from all table 41 priority 48 || true
ip -6 rule add from all table 41 priority 48 || true
#Damit OSPF funktioniert alle Routen bis auf Default Routen
ip -4 rule add from all table 43 priority 49 || true
ip -6 rule add from all table 43 priority 49 || true

#Ausgehende Pakete die über Exit sollen mit Source IP matchen und in richtige Tabelle schieben
#sonst würden z.B ICMP Echo-Replys über normale Default Route gehen
ip -4 rule add from {{server_ipv4_nat | ipaddr}} table 42 priority 50 || true
ip -6 rule add from {{ff_network.v6_ffrl_48 | ipaddr}} table 42 priority 50 || true

#Nochmal ganz auf Nummer sicher gehen
ip -4 rule add unreachable from {{ff_network.v4_network | ipaddr}} priority 51 || true
ip -6 rule add unreachable from {{ff_network.v6_ffrl_48 | ipaddr}} priority 51 || true

#schicke Uplink keine Packete mit dennen er nichts anfangen können
#https://en.wikipedia.org/wiki/Reserved_IP_addresses
#blocke private Adressbereiche (RFC1918)
ip route add unreachable 10.0.0.0/8 table 42 || true
ip route add unreachable 172.16.0.0/12 table 42 || true
ip route add unreachable 192.168.0.0/16 table 42 || true
#blocke Carrier-grade NAT Adressbereich (RFC6598)
ip route add unreachable 100.64.0.0/10 table 42 || true
#blocke Multicast Adressbereich
ip route add unreachable 224.0.0.0/3 table 42 || true
#blocke Reserved Adressbereich
ip route add unreachable 240.0.0.0/4 table 42 || true
#blocke Loopback Adressbereich
ip route add unreachable 127.0.0.0/8 table 42 || true
#blocke Documentation Adressbereich
ip route add unreachable 192.0.0.0.0/24 table 42 || true
ip route add unreachable 198.51.100.0/24 table 42 || true
ip route add unreachable 203.0.113.0/24 table 42 || true


#verhindert dass Packete an private IP Ranges über default Route (eth0) gehen
#blocke private Adressbereiche (RFC1918)
ip route add unreachable 10.0.0.0/8 table main || true
ip route add unreachable 172.16.0.0/12 table main || true
ip route add unreachable 192.168.0.0/16 table main || true
#blocke Carrier-grade NAT Adressbereich (RFC6598)
ip route add unreachable 100.64.0.0/10 table main || true
#blocke Multicast Adressbereich
ip route add unreachable 224.0.0.0/3 table main || true
#blocke Reserved Adressbereich
ip route add unreachable 240.0.0.0/4 table main || true
#blocke Loopback Adressbereich
ip route add unreachable 127.0.0.0/8 table main || true
#blocke Documentation Adressbereich
ip route add unreachable 192.0.0.0.0/24 table main || true
ip route add unreachable 198.51.100.0/24 table main || true
ip route add unreachable 203.0.113.0/24 table main || true


exit 0
